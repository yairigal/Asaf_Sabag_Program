<Window x:Class="WpfAArticleAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="592.5" Width="1710" Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid Margin="0,0,-8,-59" Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="130*"/>
            <RowDefinition Height="123*"/>
        </Grid.RowDefinitions>
       
       
       
        <Button x:Name="Submit" Content="Submit" HorizontalAlignment="Left" Margin="782,14,0,0" VerticalAlignment="Top" Width="84" Click="Submit_Click" Height="27" Foreground="#FF0E0E0E">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                    <GradientStop Color="#FFEBEBEB"/>
                    <GradientStop Color="#FFDDDDDD"/>
                    <GradientStop Color="#FF10369B" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        

        <ComboBox x:Name="TraningSetNum" HorizontalAlignment="Left" Margin="401,47,0,0" VerticalAlignment="Top" Width="120" Height="20" Grid.Row="1" DropDownClosed="TraningSetNum_DropDownClosed"/>
        <Label Content="%" HorizontalAlignment="Left" Margin="526,47,0,0" VerticalAlignment="Top" Height="24" Width="37" Grid.Row="1"/>
        <Label Content="Training set %" HorizontalAlignment="Left" Margin="346,18,0,0" VerticalAlignment="Top" Height="24" Width="127" Grid.Row="1"/>
        <Button Content="Tag Articles" HorizontalAlignment="Left" Margin="619,30,0,0" Grid.Row="1" VerticalAlignment="Top" Width="95" Height="24" Click="Button_Click"/>
       
        <Button Content="Count" HorizontalAlignment="Left" Margin="449,162,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Height="22" Click="Button_Click_1"/>
        <Label Content="Get Numbner Of Different Words in each Domain" Margin="356,120,0,0" VerticalAlignment="Top" Height="22" Grid.Row="1" HorizontalAlignment="Left" Width="286"/>
        <Button Content="Statistics" HorizontalAlignment="Left" Margin="757,142,0,0" Grid.Row="1" VerticalAlignment="Top" Width="109" Height="63" Click="Button_Click_2"/>
      
        <Frame Name="pageFrame" Content="Frame" HorizontalAlignment="Left" Height="453" Margin="948,8,0,0" VerticalAlignment="Top" Width="752" Grid.RowSpan="2"/>
        <Button x:Name="nextbtn" Content="Next" HorizontalAlignment="Left" Margin="1476,160,0,0" Grid.Row="1" VerticalAlignment="Top" Width="114" Height="48"/>
        <Button x:Name="prebtn" Content="Previous" HorizontalAlignment="Left" Margin="1066,162,0,0" Grid.Row="1" VerticalAlignment="Top" Width="122" Height="43"/>


    </Grid>
</Window>
