<Page x:Class="WpfAArticleAnalysis.Pages.FirstPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAArticleAnalysis.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="453"
      WindowTitle="Analysis Method"
      Title="FirstPage" Width="454">

    <Grid>
        <Label Content="Select Analysis Method" HorizontalAlignment="Left" Margin="14,17,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.071,-0.387" Height="24" Width="169"/>
        <Label Content="Directory Of The Articles" HorizontalAlignment="Left" Margin="14,46,0,0" VerticalAlignment="Top" Height="42" Width="169"/>
        <Label Content="Freq. Threshold" HorizontalAlignment="Left" Margin="14,93,0,0" VerticalAlignment="Top" Height="23" Width="169"/>
        <Label Content="Reducing UniGrams with freq. of 3 and less" Margin="14,148,199,278"/>

        <Label Content="Take out the stop words" HorizontalAlignment="Left" Margin="14,195,0,0" VerticalAlignment="Top" Height="24" Width="139"/>
        <ComboBox x:Name="AnalysisMethod" HorizontalAlignment="Left" Margin="183,17,0,0" VerticalAlignment="Top" Width="252" Height="24"/>
        <TextBox x:Name="ArticleDir" HorizontalAlignment="Left" IsEnabled="False" Height="42" Margin="183,46,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="189"/>
        <TextBox x:Name="Threshold" HorizontalAlignment="Left" Height="23" Margin="183,93,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="252" />
        <ComboBox x:Name="ReducingUniGrams" HorizontalAlignment="Left" Margin="260,148,0,0" VerticalAlignment="Top" Width="175" Height="27" />
        <Label x:Name="FreqWarning" Foreground="#E80000" Content="" HorizontalAlignment="Left" Margin="183,121,0,0" VerticalAlignment="Top" Height="24" Width="252"/>

        <CheckBox x:Name="TakeOutStopWords" Content="" Height="14" Width="17" Margin="175,205,262,234" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Label Content="Make Log files" HorizontalAlignment="Left" Margin="14,224,0,0" VerticalAlignment="Top" Height="27" Width="139"/>
        <CheckBox x:Name="MakeLogFiles" IsEnabled="False" Content="" HorizontalAlignment="Left" Margin="175,237,0,0" VerticalAlignment="Top" Height="14" Width="17"/>
        <Label Content="Tranings set by Domains" HorizontalAlignment="Left" Margin="14,256,0,0" VerticalAlignment="Top" Height="24" Width="156"/>
        <CheckBox x:Name="DomainsCounter" Content="" HorizontalAlignment="Left" Margin="175,266,0,0" VerticalAlignment="Top" Height="14" Width="17" />
        <Button x:Name="openDir" Content="Open" HorizontalAlignment="Left" Margin="377,46,0,0" VerticalAlignment="Top" Width="58" Height="42"/>
    </Grid>
</Page>
