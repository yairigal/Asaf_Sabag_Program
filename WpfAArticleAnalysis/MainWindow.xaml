<Window x:Class="WpfAArticleAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="592.5" Width="888" Closed="Window_Closed" Loaded="Window_Loaded">


    <Grid>
        <Button x:Name="Submit" Content="Submit" HorizontalAlignment="Left" Margin="366,508,0,0" VerticalAlignment="Top" Width="84" Click="Submit_Click" Height="27" Foreground="#FF0E0E0E">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                    <GradientStop Color="#FFEBEBEB"/>
                    <GradientStop Color="#FFDDDDDD"/>
                    <GradientStop Color="#FF10369B" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Frame Name="pageFrame" Content="Frame" HorizontalAlignment="Left" Height="473" VerticalAlignment="Top" Width="880"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="48" Margin="480,503,0,0" VerticalAlignment="Top" Width="54" MouseDown="image_MouseDown" Source="Images/rightButton.png" RenderTransformOrigin="0.5,0.5"/>
        <Image x:Name="image_Copy" HorizontalAlignment="Left" Height="48" Margin="286,503,0,0" VerticalAlignment="Top" Width="48" Source="Images/leftButton.png" MouseDown="image_Copy_MouseDown"/>
    </Grid>
</Window>
